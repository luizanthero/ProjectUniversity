@model ProjectUniversity.Service.Entity.Professor

@{
    ViewBag.Title = "Excluir Professor";
}

<h3>Tem certeza que deseja excluir este Professor(a)?</h3>

@if (TempData["Success"] != null)
{
    <p class="alert alert-success">@TempData["Success"]</p>
}

@if (TempData["Error"] != null)
{
    <p class="alert alert-danger">@TempData["Error"]</p>
}

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sobrenome)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="btn-group btn-group-toggle">
            <label class="btn btn-secondary">
                @Html.ActionLink(" Voltar", "Index", new { area = "" },
                    new { title = "Voltar", @class = "fa fa-arrow-left text-decoration-none text-white" })
            </label>
            <button type="submit" title="excluir" class="btn btn-danger fa fa-trash"> Excluir</button>
        </div>
    }
</div>
