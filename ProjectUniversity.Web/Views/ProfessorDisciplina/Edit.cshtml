@model ProjectUniversity.Service.Entity.ProfessorDisciplina

@{
    ViewBag.Title = "Editar Grade";
}

<h2>Editar Grade</h2>

@if (TempData["Success"] != null)
{
    <p class="alert alert-success">@TempData["Success"]</p>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.ProfessorId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ProfessorId", null, "Selecione...", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProfessorId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.DisciplinaId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("DisciplinaId", null, "Selecione...", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DisciplinaId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="btn-group btn-group-toggle">
            <label class="btn btn-secondary">
                @Html.ActionLink(" Voltar", "Index", new { area = "" },
                    new { title = "Voltar", @class = "fa fa-arrow-left text-decoration-none text-white" })
            </label>
            <button type="submit" title="salvar" class="btn btn-info fa fa-save"> Salvar</button>
        </div>
    </div>
}

<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
